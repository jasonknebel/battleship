<!DOCTYPE html>
<html>

  <head>
    <title>Battleship</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <header>
    <%= render 'layouts/header' %>
  </header>

  <body>
    <div class='container'>
      <div class='message_container'>
        <div class='message'></div>
        <div class='error'></div>
        <%=flash[:alert] %>
      </div>
      <%= yield %>
      <div class='message_container'></div>
    </div>
  </body>
  
</html>
